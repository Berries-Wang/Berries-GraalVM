bench-dacapo-jfr: ${bench-common} ${default-heap} ${jfr-bench-notifications} {
  environment : {
    BENCH_SUITE : "dacapo"
  }
  run: [
    ${bench-jvmci.mx-dacapo} ${bench-arguments} ${JFR.jvm-opts}
  ]
  setup: ${bench-common.setup} ${JFR.setup}
  teardown: ${JFR.teardown}
}

