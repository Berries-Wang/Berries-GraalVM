e3.default-jfr : ${linux-amd64} {
  capabilities: ${linux-amd64.capabilities} [e3, no_frequency_scaling]
  environment : {
    JVM_CONFIG  : ${jvm-config.default}
    JVM         : "server"
    MACHINE_NAME: "e3"
    BENCH_SERVER_EXTRAS : "target:weekly-jfr"
  }
  targets: [bench, weekly]
}

e3.tmpfs10g-jfr : ${e3.default-jfr} {
  capabilities: ${e3.default-jfr.capabilities} [tmpfs10g]
}

builds += [
  ${e3.tmpfs10g-jfr} ${bench-dacapo-jfr}                        ${oraclejdk8} { name: "bench-compiler-dacapo-linux-e3-jfr" }
  ${e3.tmpfs10g-jfr} ${bench-scala-dacapo-jfr}                  ${oraclejdk8} { name: "bench-compiler-scala-dacapo-linux-e3-jfr" }
  ${e3.default-jfr} ${bench-specjvm2008-Single-jfr}             ${oraclejdk8} { name: "bench-compiler-specjvm2008-Single-linux-e3-jfr" }
  ${e3.default-jfr} ${bench-specjbb2015-jfr}                    ${oraclejdk8} { name: "bench-compiler-specjbb2015-linux-e3-jfr" }
  ${e3.default-jfr} ${bench-renaissance-jfr}                    ${oraclejdk8} { name: "bench-compiler-renaissance-linux-e3-jfr", timelimit: "3:45:00" }
  ${e3.default-jfr} ${bench-renaissance-legacy-jfr}             ${oraclejdk8} { name: "bench-compiler-renaissance-legacy-linux-e3-jfr" }
]
